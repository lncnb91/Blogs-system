<% provide(:title, 'Home') %>
<!DOCTYPE html>
<html>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/entry_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Framgia Blog</h1>

    <h2>
      This is the official website for the
      <a href="http://recruit.framgia.vn/">Framgia Vietnam</a>
      's Bloggers.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("framgia.png", alt: "Rails"), 'http://recruit.framgia.vn' %>
<% end %>
